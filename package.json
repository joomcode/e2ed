{
  "name": "e2ed",
  "version": "0.7.0",
  "description": "E2E utils",
  "keywords": [
    "E2E",
    "TestCafe"
  ],
  "author": "uid11",
  "license": "MIT",
  "bin": {
    "e2ed": "./bin/runLocal.js",
    "e2ed-init": "./bin/init.sh"
  },
  "bugs": "https://github.com/uid11/e2ed/issues",
  "engines": {
    "node": ">=14"
  },
  "homepage": "https://github.com/uid11/e2ed#readme",
  "repository": "uid11/e2ed",
  "dependencies": {
    "pngjs": "6.0.0",
    "testcafe-without-typecheck": "1.17.1-rc.4"
  },
  "devDependencies": {
    "@types/node": "16.11.13",
    "@typescript-eslint/eslint-plugin": "5.7.0",
    "@typescript-eslint/parser": "5.7.0",
    "eslint": "8.4.1",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.25.3",
    "husky": "7.0.4",
    "prettier": "2.5.1",
    "testcafe": "1.17.1",
    "typescript": "4.5.4"
  },
  "peerDependencies": {
    "typescript": ">=4"
  },
  "scripts": {
    "lint": "./bin/runParallel.sh lint:es lint:prettier lint:types",
    "lint:clear:cache": "rm .cache-eslint",
    "lint:es": "eslint --cache --cache-location=.cache-eslint --max-warnings=0 --ext=.ts .",
    "lint:prettier": "prettier --check --ignore-path=.gitignore '**/*.{json,md,ts,yaml}'",
    "lint:types": "tsc --noEmit",
    "test": "./bin/runParallel.sh test:local test:docker",
    "build:clear": "rm -rf build",
    "prebuild": "npm run build:clear",
    "build": "tsc; echo 'Compilation done.'",
    "postbuild": "npm run build:rename && npm run build:copy && npm run build:init",
    "prebuild:rename": "cp -r build/out/* build",
    "build:rename": "mv build/src build/node_modules && mv build/node_modules/package build/node_modules/e2ed",
    "build:copy": "npm run build:copy:bin && npm run build:copy:scripts && npm run build:copy:meta && npm run build:copy:example",
    "prebuild:copy:bin": "rm -r build/node_modules/e2ed/bin/*.d.ts",
    "build:copy:bin": "cp bin/init.sh bin/runInDocker.sh build/node_modules/e2ed/bin",
    "postbuild:copy:bin": "(cd build/node_modules/e2ed/bin && chmod +x runLocal.js && chmod +x runWithRetries.js)",
    "build:copy:scripts": "cp build/scripts/*.js build",
    "build:copy:meta": "cp -r LICENSE package.json README.md styles build/node_modules/e2ed",
    "prebuild:copy:example": "rm -r build/e2ed",
    "build:copy:example": "cp -r e2ed build/node_modules/e2ed/ && rm -r build/node_modules/e2ed/e2ed/node_modules",
    "build:init": "(cd ./build && ./node_modules/e2ed/bin/init.sh)",
    "preversion": "npm run lint:clear:cache && npm run build && npm run lint && npm run test",
    "version": "npm run update:changelog",
    "update:changelog": "node build/updateChangelog",
    "postupdate:changelog": "prettier --write CHANGELOG.md && git add CHANGELOG.md",
    "postversion": "git push --follow-tags && npm run release",
    "prerelease": "npm run build",
    "release": "npm publish ./build/node_modules/e2ed",
    "postrelease": "if [ -f ./local/postrelease.sh ]; then ./local/postrelease.sh; else echo 'No postrelease hook'; fi",
    "build:docker": "docker build -t e2ed .",
    "pretest:docker": "npm run build:docker && npm run test:docker:copy",
    "test:docker:copy": "rm -rf build/docker && mkdir build/docker && cp -r build/e2ed build/docker/e2ed",
    "test:docker": "(cd ./build/docker && E2ED_CONCURRENCY=2 E2ED_DOCKER_RETRIES=1 E2ED_ORIGIN=https://google.com ./e2ed/bin/runDocker.sh)",
    "test:local": "(cd ./build && E2ED_ORIGIN=https://google.com ./node_modules/e2ed/bin/runLocal.js)",
    "testcafefork:publish": "./bin/TestCafeFork/publish.sh",
    "testcafefork:clean": "./bin/TestCafeFork/clean.sh",
    "testcafefork:test:install": "./bin/TestCafeFork/testInstall.sh"
  },
  "types": "index.d.ts"
}
