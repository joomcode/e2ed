{
  "name": "e2ed",
  "version": "0.2.5",
  "description": "E2E utils",
  "keywords": [
    "E2E",
    "testcafe"
  ],
  "author": "uid11",
  "license": "MIT",
  "bin": {
    "e2ed": "./bin/runLocal.js",
    "e2ed-init": "./bin/init.sh"
  },
  "bugs": "https://github.com/uid11/e2ed/issues",
  "engines": {
    "node": ">=14"
  },
  "homepage": "https://github.com/uid11/e2ed#readme",
  "repository": "uid11/e2ed",
  "dependencies": {
    "testcafe": "1.15.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "4.28.5",
    "@typescript-eslint/parser": "4.28.5",
    "eslint": "7.32.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.23.4",
    "husky": "7.0.1",
    "prettier": "2.3.2",
    "typescript": "4.4.0-beta"
  },
  "scripts": {
    "lint": "npm run lint:es & npm run lint:prettier & npm run lint:types & wait",
    "lint:es": "eslint --max-warnings=0 --ext=.ts .",
    "lint:prettier": "prettier --check --ignore-path=.gitignore '**/*.{json,md,ts,yaml}'",
    "lint:types": "tsc --noEmit",
    "test": "npm run test:local & npm run test:docker & wait",
    "prebuild": "rm -rf build",
    "build": "tsc; echo 'Compilation done.'",
    "postbuild": "npm run build:rename && npm run build:copy:meta && npm run build:copy:example && npm run build:init",
    "build:rename": "mv build/src build/node_modules && mv build/node_modules/package build/node_modules/e2ed",
    "prebuild:copy:meta": "rm -r build/node_modules/e2ed/bin/*.d.ts",
    "build:copy:meta": "cp -r bin LICENSE package.json README.md build/node_modules/e2ed",
    "postbuild:copy:meta": "(cd build/node_modules/e2ed/bin && chmod +x runLocal.js && chmod +x runWithRetries.js)",
    "prebuild:copy:example": "rm -r build/e2ed",
    "build:copy:example": "cp -r e2ed build/node_modules/e2ed/ && rm -r build/node_modules/e2ed/e2ed/node_modules",
    "build:init": "(cd ./build && ./node_modules/e2ed/bin/init.sh)",
    "prerelease": "npm run lint & npm run build && npm run test",
    "release": "npm publish ./build/node_modules/e2ed",
    "build:docker": "docker build -t e2ed .",
    "pretest:docker": "npm run build:docker && npm run test:docker:copy",
    "test:docker:copy": "rm -rf build/docker && mkdir build/docker && cp -r build/e2ed build/docker/e2ed",
    "test:docker": "(cd ./build/docker && E2ED_CONCURRENCY=2 E2ED_DOCKER_RETRIES=1 E2ED_ORIGIN=https://google.com ./e2ed/bin/runDocker.sh)",
    "test:local": "(cd ./build && E2ED_ORIGIN=https://google.com ./node_modules/e2ed/bin/runLocal.js chromium:headless)"
  },
  "types": "index.d.ts"
}
